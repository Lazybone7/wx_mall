<view class="cu-bar tabbar margin-bottom-xl bg-white my-bar">

	<view class="action {{selected === 0 ? 'active' : 'default'}} text-green" data-index="0" bindtap="switchTab">
		<view class="cuIcon-home"></view>
		首页
	</view>

	<view class="action  {{selected === 1 ? 'active' : 'default'}} text-gray" data-index="1" bindtap="switchTab">
		<view class="cuIcon-similar"></view>
		分类
	</view>

	<view class="action text-gray add-action">
		<button class="cu-btn {{show === true ? 'my-button' : ''}} cuIcon-add bg-green shadow " type="primary" bindtap="onClickShow"></button>
		发布
	</view>

	<view class="action  {{selected === 2 ? 'active' : 'default'}} text-gray" data-index="2" bindtap="switchTab">
		<view class="cuIcon-cart">
			<view class="cu-tag badge">99</view>
		</view>
		购物车
	</view>
	
	<view class="action  {{selected === 3 ? 'active' : 'default'}} text-gray" data-index="3" bindtap="switchTab">
		<view class="cuIcon-my">
			<view class="cu-tag badge"></view>
		</view>
		我的
	</view>
</view>

<van-overlay show="{{show}}" bind:click="onClickHide" >
  <view class="wrapper">
    <view class="release_camera" bindtap="navigatorToRelease">
				<image src="../icons/camera.png" mode="widthFix"></image>
				发闲置
		</view>
  </view>
</van-overlay>